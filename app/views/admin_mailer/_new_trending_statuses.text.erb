<%= raw t('admin_mailer.new_trends.new_trending_statuses.title') %>

<% @statuses.each do |status| %>
- <%= ActivityPub::TagManager.instance.url_for(status) %>
  <%= raw t('admin.trends.tags.current_score', score: status.trending_status.score.round(2)) %>
<% end %>

<% if @lowest_trending_status %>
<%= raw t('admin_mailer.new_trends.new_trending_statuses.requirements', lowest_status_url: ActivityPub::TagManager.instance.url_for(@lowest_trending_status), lowest_status_score: @lowest_trending_status.trending_status.score.round(2), rank: Trends.statuses.options[:review_threshold]) %>
<% else %>
<%= raw t('admin_mailer.new_trends.new_trending_statuses.no_approved_statuses') %>
<% end %>

<%= raw t('application_mailer.view')%> <%= admin_trends_statuses_url %>
